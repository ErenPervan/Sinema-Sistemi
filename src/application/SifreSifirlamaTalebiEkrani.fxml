<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="450.0" styleClass="root" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SifreSifirlamaTalebiController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
         <children>
            <Label text="Şifre Sıfırlama Talebi" styleClass="title-label" />
            <Label text="Sistemde kayıtlı e-posta adresinizi giriniz:" wrapText="true" />
            <TextField fx:id="txtEpostaAdresi" promptText="E-posta adresiniz" maxWidth="300.0" />
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnKodGonder" onAction="#handleKodGonder" text="Sıfırlama Kodu Gönder" styleClass="action-button" prefWidth="180.0"/>
                  <Button fx:id="btnGirisEkraniDon" onAction="#handleGirisEkraniDon" text="Girişe Dön" styleClass="cancel-button" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>